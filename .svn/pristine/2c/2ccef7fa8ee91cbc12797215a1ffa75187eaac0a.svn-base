.head {
	border-bottom:2px solid #0394cb;
	line-height: 80px;
}

.head_left {
	padding-left: 20px;
	line-height:80px;
	color:#0394cb;
	font-size: 30px;
	float: left;
	font-weight: 700;
}

.head_hello {
	color:#0394cb;
}

.nav_lf {
	width: 200px;
	border-right: 2px solid #0394cb;
	height:calc(100% - 82px);
}

.nav_lf ul li {
	width: 100%;
	line-height: 60px;
	color:#333;
	text-align: center;
	font-size: 26px;
	font-weight: 600;
	cursor: pointer;
}

.nav_lf ul li:hover{
	background: #0394cb;
	color:#fff;
}

.nav_lf .onli {
	background: #0394cb;
	color:#fff;
}

.right {
	width:calc(100% - 202px);
	height:calc(100% - 82px);
}

.right #content {
	margin:80px auto 0;
	width: 600px;
	
}

.right #content tr {
	line-height: 40px;
	text-align: center;
}