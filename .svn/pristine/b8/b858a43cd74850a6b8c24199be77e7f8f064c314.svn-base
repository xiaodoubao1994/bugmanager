<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>bug列表</title>
    <link rel="stylesheet" type="text/css" href="../css/public.css">
    <link rel="stylesheet" href="http://at.alicdn.com/t/font_469843_kazbstwhj4qjjor.css">
    <link rel="stylesheet" type="text/css" href="../css/guanliyuan.css">
    <link rel="stylesheet" type="text/css" href="../css/exploit.css">
    <style>
        .right #content {
            margin: 80px auto 0;
            width: 600px;
        }

        .right #content {
            width: 800px;
        }

        .right #content tr {
            line-height: 50px;
        }

        .right #content th {
            font-size: 16px;
        }

        .right #content tr {
            font-size: 14px;
        }

        .right #content tr a {
            color: #5cb85c;
            font-weight: bold;
        }

        /*--------------------弹出框部分----------------*/
        body {
            position: relative;
        }

        #new-bug-div {
            padding-left: 70px;
            padding-bottom: 40px;
            margin: auto;
            width: 600px;
            position: absolute;
            left: 50%;
            margin-left: -300px;
            background-color: white;
            top: 50%;
            margin-top: -274px;
            z-index: 999;
            display: none;
        }

        .bug-item {
            font-size: 16px;
            margin-top: 20px;
        }

        .bug-item input {
            width: 410px;
            height: 30px;
            border-radius: 2px;
            border: 1px solid rgb(169, 169, 169);
            margin-left: 50px;
            padding-left: 10px;
        }

        .des_text {
            float: left;
        }

        #desc {
            padding: 10px;
            float: left;
            width: 400px;
            border-radius: 2px;
            margin-left: 50px;
        }

        select {
            width: 300px;
            height: 34px;
            margin-left: 44px;
        }

        select option {
            height: 40px;
        }

        #assign {
            margin-left: 29px;
        }

        #level {
            margin-left: 13px;
        }

        #btn-add {
            width: 100px;
            height: 40px;
            background-color: #0394cb;
            border-radius: 4px;
            text-align: center;
            font-size: 16px;
            color: white;
            margin: auto;
            margin-left: 250px;
            margin-top: 40px;
            border: none;
        }

        #btn-add:hover {
            background-color: #0394cb;
            cursor: pointer;
        }

        .bug-item01 {
            margin-top: 70px;
        }

        #shadow {
            position: fixed;
            position: absolute;
            left: 0;
            top: 0;
            background-color: rgba(0, 0, 0, .4);
            width: 100%;
            height: 100%;
            display: none;
        }

        .closed {
            position: absolute;
            right: 20px;
            top: 10px;
        }

        .closed:hover {
            cursor: pointer;
        }

        .icon-cha {
            font-size: 24px;
            line-height: 40px;
            color: #8b8b8b;
        }
    </style>
</head>
<body>
<!--头部-->
<div class="head clfix">
    <div class="head_left">bug管理系统</div>
    <div class="fr">
        <div class="head_hello fl">
            <span class="iconfont icon-renwu"></span>
            <span>您好，</span>
            <span id="name">项目经理！</span>
        </div>
        <a class="quit fl" id="quit">
            退出
        </a>
    </div>
</div>
<!--导航-->
<div class="nav_lf fl">
    <ul id="nav_ul">

    </ul>
</div>
<!-- 右边内容	 -->
<div class="right fl">

    <table id="content" border="1" cellpadding="0" cellspacing="0">
    </table>
</div>

<!-- 弹出框部分 -->
<div id="new-bug-div">
    <div class="closed iconfont icon-cha" id="closed"></div>
    <div class="bug-item bug-item01">
        名称：<input type="text" id="title">
    </div>
    <div class="bug-item clfix">
        <div class="des_text">描述：</div>
        <textarea id="desc" rows="8" cols="80"></textarea>
    </div>
    <div class="bug-item">
        项目：
        <select name="" id="project">
            <option value="81">测试项目</option>

            <option value="82">哈哈哈</option>
        </select>
    </div>
    <div class="bug-item">
        指派给：
        <select name="" id="assign">
            <option value="1">lili</option>

            <option value="5">郭梦婷</option>
        </select>
    </div>
    <div class="bug-item">
        严重级别：
        <select name="" id="level">
            <option value="1">一般</option>
            <option value="2">严重</option>
            <option value="3">高危</option>
        </select>
    </div>
    <button id="btn-add">提交</button>
</div>
<!-- shadow -->
<div id="shadow">

</div>


</body>
<script src="../js/ajax.js"></script>
<script src="../js/config.js"></script>
<script>


    getCurrentUser(function () {
        var skipList = document.getElementsByClassName("skip");
        var Name = document.getElementById("name");
        var quit = document.getElementById("quit");
        quit.onclick = function () {
            logout();
        }
        // id: "1", username: "lili", type: "2"}
        if (currentUser) {
            id = currentUser["id"];
            name = currentUser["username"];
            type = currentUser["type"];
        } else {
            // window.location.href = "../index.html";
        }

        if (type == 1) {
            var ul = `<li class="skip">员工列表</li>
					<li class="skip">项目列表</li>
					<li class="onli skip">bug列表</li>`
            onskipList("../html/exploitUser.html", "../html/exploitProject.html", "../html/exploitBug.html");
        }
        if (type == 2 || type == 3) {
            var ul = `<li class="skip">项目列表</li>
				<li class="onli skip">bug列表</li>`
            onskipList("../html/exploitProject.html", "../html/exploitBug.html");
        }

        function onskipList(a, b, c) {
            nav_ul.innerHTML = ul;
            var skipList = document.getElementsByClassName("skip");
            for (let i = 0; i < skipList.length; i++) {   //导航跳转
                skipList[i].onclick = function () {
                    if (i == 0) {
                        window.location.href = a;
                    }
                    if (i == 1) {
                        window.location.href = b;
                    }
                    if (i == 2) {
                        window.location.href = c;
                    }
                }
            }
        }

        Name.innerHTML = name + "&nbsp&nbsp!";   //用户名


        var table = document.getElementById('content');
        ajax({
            type: 'get',
            url: config.url + '/php/bugs.php',
            dataType: 'json',
            success: function (data) {
                // console.log(data)
                var html = `
		            <tr>
		                <th>bug编号</th>
		                <th>bug名称</th>
		                <th>bug描述</th>
		                <th>所属项目</th>
		                <th>测试人员</th>
		                <th>开发人员</th>
		                <th>状态</th>
		                <th>级别</th>
		                <th>操作</th>
		            </tr>
		        `
                for (let i = 0; i < data.length; i++) {
                    var bug = data[i]
                    var id = bug["id"]
                    var title = bug["title"]
                    var desc = bug["description"]
                    var proname = bug["proname"]
                    var tester = bug["tester"]
                    var assign = bug["assign"]
                    var level = config.level[bug["level"]]
                    var status = config.status[bug["status"]]

                    html += `
		            <tr>
		                <td>${id}</td>
		                <td>${title}</td>
		                <td>${desc}</td>
		                <td>${proname}</td>
		                <td>${tester}</td>
		                <td>${assign}</td>
		                <td>${status}</td>
		                <td>${level}</td>
		                <td><a href="#" data-id=${id} class="btn-edit">编辑</a></td>
		            </tr>
		            `

                }
                table.innerHTML = html
            }
        })

// -----------------------------------------------
        var table = document.getElementById('content');
        var editBtnLlist = document.getElementsByClassName("btn-edit");
        var add_box = document.getElementById("add_box");
        var shadow = document.getElementById("shadow");
        var closed01 = document.getElementById("closed");
        var new01Bugdiv = document.getElementById("new-bug-div");


//点击叉关掉弹出框
        closed01.onclick = function () {
            shadow.style.display = "none";
            new01Bugdiv.style.display = "none";
        }

//点击编辑按钮出现弹出框
        for (let i = 0; i < editBtnLlist.length; i++) {
            editBtnLlist[i].onclick = function () {
                shadow.style.display = "block";
                new01Bugdiv.style.display = "block";
            }
        }

// --------------------------------------------
    });


</script>
</html>