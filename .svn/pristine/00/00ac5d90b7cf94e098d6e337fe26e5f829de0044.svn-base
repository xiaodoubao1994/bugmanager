@charset "utf-8";
html, body, div, ul, ol, li, dl, dt, dd, form, fieldset, h1, h2, h3, h4, h5, h6, p {
    margin: 0px;
    padding: 0px;
}
html{font-family:"微软雅黑";font-size:14px;color:#555;}
li{list-style:none;}
a{text-decoration:none;color:red;}	

img {
    border: 0;
    vertical-align: top;
}

input:focus, textarea:focus, button:focus, select:focus {
    outline: none;
}

textarea {
    resize: none;
}

input[type="button"], input[type="submit"], input[type="reset"], input[type="file"] {
    cursor: pointer;
    border: 0;
}

.clfix:after{content:"";clear:both;display:block;height:0;overflow:hidden;visibility:hidden;}
body{background-color: #f0f0f0;}

.clfix {
    zoom: 1;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.mr{
    margin-right: 15px;
}
