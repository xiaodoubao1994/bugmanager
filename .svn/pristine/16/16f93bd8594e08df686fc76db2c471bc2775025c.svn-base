body,html{position: relative;width: 100%;height: 100%;}
/*---------------内容区域-----------------------*/
.add_box{width: 1000px;margin:0 auto;}
.icon-font{font-size: 80px;float: left;margin-right: 20px;}
.icon-tianjia{font-size: 80px;float: left;margin-right: 20px;}
.add_text{float: left;line-height: 80px;font-size: 24px;}
.add{background-color: white;width:300px;padding:20px;margin-top: 40px;}
.add:hover{cursor: pointer;}

/*---------------项目内容部分-----------------------*/
.item_box{width:600px;height:440px;margin-left:130px;background-color: white;margin-top:40px;position: relative;display: none;z-index: 999;position: fixed;left:50%;margin-left:-300px;top:50%;margin-top:-220px;}
.closed{position: absolute;right:10px;}
.closed:hover{cursor: pointer;}
.icon-cha{font-size: 24px;line-height: 40px;color: #8b8b8b;}
.information_box{line-height: 40px;border-top:1px solid #d7d7d7;background-color: #d7d7d7;}
.information_box li{float: left;width: 120px;text-align: center;font-size: 16px;}
.information_name .information_name_input{width: 370px;height:30px;border-radius:4px;border:1px solid #d7d7d7;padding-left:10px;margin-left:14px;float: left;font-size: 14px;}
.information_name_text{color:#555555;font-weight: bold;margin-left: 70px;margin-top: 16px;}
.information_name_miaoshu textarea{width: 360px;height:200px;border-radius:4px;border:1px solid #d7d7d7;padding-left:10px;margin-left:14px;padding:10px;resize: none;font-size: 14px;float: left;}
.information_name_left{float: left;}
.information_name_right{width: 380px;margin-left:14px;float: left;}
.item_btn{width:100px;height: 40px;background-color: #0394cb;border-radius: 4px;text-align: center;font-size:16px;color:white;margin:auto;margin-left:250px;margin-top: 20px;}
.item_btn:hover{background-color: #1c708f;cursor: pointer;}

#shadow{width: 100%;height: 100%;background-color: rgba(0,0,0,.3);position:absolute;left:0;top:0;display: none;}
